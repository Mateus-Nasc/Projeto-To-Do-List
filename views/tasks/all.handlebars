
<h1>Todas as tasks</h1>
<ul class="task-list">
    {{#each tasks}}
        <li>
            {{#if this.done}}
                <a href="/tasks/mostre/{{this.id}}" class="title done">{{this.title}}</a>
            {{else}}
                <a href="/tasks/mostre/{{this.id}}" class="title">{{this.title}}</a>
            {{/if}}
            <div class="actions">
                {{!-- Formulário para atualizar o status da tarefa --}}
                <form action="/tasks/updatestatus" method="post">
                    <input type="hidden" name="id" value="{{this.id}}">{{!-- Um input com name="id" armazena o identificador da tarefa ({{this.id}}). Outro input com name="done" carrega o valor atual da propriedade done, possibilitando a inversão do status no backend. --}}
                    <input type="hidden" name="done" value="{{this.done}}">

                    <button type="submit">
                        <i class="bi bi-check2"></i>
                    </button>
                </form>

                 <!-- Link para editar a tarefa o link aponta para /tasks/edit/{{this.id}}, encaminhando o usuário para a página de edição da tarefa, identificada pelo seu ID.-->
                <a href="/tasks/edit/{{this.id}}"><i class="bi bi-pencil-square"></i></a>

                 <!-- Formulário para remover a tarefa formulário envia uma requisição POST para /tasks/remove com um input oculto que contém o ID da tarefa. -->
                <form action="/tasks/remove" method="post">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <button type="submit">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </form>
            </div>
        </li>
    {{/each}}
</ul>

{{!-- {{this.title}} insere dinamicamente o título da tarefa. --}}

